<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="csi.fhict.org.ifindapp.HomePage">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/ivLogo"
        android:scaleType="center"
        android:adjustViewBounds="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="Logo" />

    <Button
        android:text="Specefieker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Bspecefiek"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:textColor="@color/background"
        android:layout_alignBaseline="@+id/bZoeken"
        android:layout_alignBottom="@+id/bZoeken"
        android:layout_alignRight="@+id/etZoek"
        android:layout_alignEnd="@+id/etZoek"
        android:visibility="visible" />

    <Button
        android:text="Zoeken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bZoeken"
        android:textColor="@color/background"
        android:layout_below="@+id/etZoek"
        android:layout_alignRight="@+id/tvzoeken"
        android:layout_alignEnd="@+id/tvzoeken"
        android:visibility="visible" />

    <TextView
        android:text="Prijs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tbPrijs"
        android:textColor="@color/White"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/bZoeken"
        android:layout_alignLeft="@+id/Rprijs"
        android:layout_alignStart="@+id/Rprijs" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etZoek"
        android:layout_marginTop="11dp"
        android:hint="Voer je zoekterm in"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textColorHint="@color/grey"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_below="@+id/ivLogo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Afstand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAfstand"
        android:textColor="@color/White"
        android:layout_below="@+id/Rprijs"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/Rprijs"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tbPrijs"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/RAfstand"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAfstand"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"></LinearLayout>

    <TextView
        android:text="Zoeken in omschrijving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvzoeken"
        android:textColor="@color/White"
        android:layout_marginBottom="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:text="Nee"
        android:layout_width="wrap_content"
        android:layout_height="60px"
        android:id="@+id/Rnee"
        android:textColor="@color/White"
        app:buttonTint="@android:color/white"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RadioButton
        android:text="Ja"
        android:layout_width="wrap_content"
        android:layout_height="60px"
        android:id="@+id/Rja"
        android:textColor="@color/White"
        android:drawableTint="@color/White"
        android:checked="false"
        android:buttonTint="@android:color/white"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/Bspecefiek"
        android:layout_alignStart="@+id/Bspecefiek" />

</RelativeLayout>
